{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@common/*": ["./common/*"],
      "@helpers/*": ["./common/helpers/*"],
      "@components/*": ["./common/components/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@pages/*": ["./pages/*"],
      "@store/*": ["./store/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}
